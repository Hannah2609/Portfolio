---
import "../CSS/global.css";
const { overskrift, beskrivelse, billede, label1, label2, label3, label4 } =
  Astro.props;
---

<article class="snap">
  <div class="imgFrame">
    <img src={"/img/" + billede} alt="" />
  </div>
  <h2>{overskrift}</h2>
  <h3>{beskrivelse}</h3>
  <div class="labels">
    <p>{label1}</p>
    <p>{label2}</p>
    <p>{label3}</p>
    <p>{label4}</p>
  </div>
</article>

<style>
  @media (min-width: 900px) {
    article {
      min-width: 800px;
      padding-left: 1em;
    }
  }

  @media (max-width: 900px) {
    article {
      min-width: 300px;
      padding-left: 1em;
    }
  }

  h2 {
    margin-bottom: 0;
    font-weight: 400;
  }
  h3 {
    color: #98978f;
    font-weight: 300;
    margin: 0;
  }

  img {
    cursor: pointer;
    width: 100%;
    height: 450px;
    object-fit: cover;
    aspect-ratio: 16:9;
  }

  .imgFrame:hover {
    box-shadow: 0px 0px 20px 11px rgba(230, 228, 214, 1);
    -webkit-box-shadow: 0px 0px 20px 11px rgba(230, 228, 214, 1);
    -moz-box-shadow: 0px 0px 20px 11px rgba(230, 228, 214, 1);
  }

  .labels {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5em;
   
  } 
  .labels p {
    margin: 0;
}
  p {
    font-size: 0.9rem;
    border-radius: 20px;
    padding: 5px 20px;
    background-color: #e6e4d680;
  }
  .snap {
    scroll-snap-align: start;
}

</style>
