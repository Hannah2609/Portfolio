---
// import "../CSS/global.css";
const { overskrift, beskrivelse, billede, link} =
  Astro.props;
---

<article class="snap">
  <a class="imgFrame" href={link} target="_blank" >
    <img src={"/img/" + billede} alt="" />
  </a>
  <h2>{overskrift}</h2>
  <h3>{beskrivelse}</h3>
  <div class="labels">
    <slot></slot>
    <!-- <p>{label1}</p>
    <p>{label2}</p>
    <p>{label3}</p>
    <p>{label4}</p> -->
  </div>
</article>

<style>
  @media (min-width: 900px) {
    article {
      min-width: 800px;
      padding-left: 1em;
    }
  }

  @media (max-width: 900px) {
    article {
      min-width: 300px;
      padding-left: 1em;
    }
  }

  h2 {
    margin-bottom: 0;
    font-weight: 400;
  }
  h3 {
    color: #98978f;
    font-weight: 300;
    margin: 0;
  }

  img, a {
    cursor: pointer;
    width: 100%;
    height: 450px;
    object-fit: cover;
    aspect-ratio: 16:9;
    display: block;
  }
  .imgFrame {
        -webkit-transition: all .5s ease; 
            transition: all .5 ease;
           

  }
  a:hover {
    box-shadow: 0px 0px 20px 11px rgba(230, 228, 214, 1);
    -webkit-box-shadow: 0px 0px 20px 11px rgba(230, 228, 214, 1);
    -moz-box-shadow: 0px 0px 20px 11px rgba(230, 228, 214, 1);
        -webkit-transition: all .5s ease; 
            transition: all .5 ease;
        
  }

  .snap {
    scroll-snap-align: start;
}

</style>
