    billede="sakura.png"
    overskrift="Sakura Festival"
    link="https://sakura-festival-16.netlify.app"
    beskrivelse="Redesign af hjemmeside med fokus på forbedret brugeroplevelse på Sakura Festivals website."
  >
    <div class="labels">
      <p>Figma</p>
      <p>Astro</p>
      <p>Redesign</p>
      <p>Brugertest</p>
    </div>
  </Projekt>

